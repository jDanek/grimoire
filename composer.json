{
    "name": "danek/grimoire-db",
    "description": "Grimoire is a PHP library for simple working with data in the database.",
    "keywords": [
        "database"
    ],
    "license": [
        "Apache-2.0",
        "GPL-2.0+"
    ],
    "authors": [
        {
            "name": "Jirka Daněk",
            "homepage": "https://jdanek.eu/",
            "role": "Grimoire Developer"
        },
        {
            "name": "Jakub Vrána",
            "homepage": "https://www.vrana.cz/",
            "role": "The original author of NotORM library"
        }
    ],
    "autoload": {
        "psr-4": {
            "Grimoire\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Grimoire\\Test\\": "tests"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "ext-mysqli": "*",
        "ext-json": "*",
        "psr/simple-cache": "^1.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    }
}
